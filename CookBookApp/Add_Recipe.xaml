<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookBookApp.Add_Recipe"
             Title="Dodaj Przepis">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Nazwa -->
            <Label Text="Nazwa przepisu:" FontSize="18" FontAttributes="Bold"/>
            <Entry x:Name="RecipeNameEntry" Placeholder="Wpisz nazwę przepisu" FontAttributes="Italic" MaxLength="200" BackgroundColor="#3B3533" PlaceholderColor="White"/>

            <!-- Składniki -->
            <Label Text="Składniki:" FontSize="18" FontAttributes="Bold"/>

            <VerticalStackLayout x:Name="IngredientsList" Spacing="5">
                
                <HorizontalStackLayout x:Name="FirstIngredientRow" Spacing="5">
                    
                    <Button Text="-" FontSize="20" TextColor="White" BackgroundColor="Red"
                    WidthRequest="40" HeightRequest="40" Clicked="OnRemoveIngredientClicked"/>
                    
                    <Entry x:Name="FirstIngredientEntry" Placeholder="Dodaj składnik" FontAttributes="Italic"
                    MaxLength="200" BackgroundColor="#3B3533" PlaceholderColor="White" WidthRequest="400"/>
                    
                    <Entry x:Name="FirstIngredientAmount" Placeholder="g" Keyboard="Numeric"
                    BackgroundColor="#3B3533" PlaceholderColor="White" WidthRequest="80" FontAttributes="Italic"/>
                    
                </HorizontalStackLayout>
                
            </VerticalStackLayout>

            <Button x:Name="AddIngredientsButton" Text="+" Clicked="OnAddIngredientClicked" FontSize="24" TextColor="White" BackgroundColor="#3B3533" BorderColor="White" BorderWidth="1" HeightRequest="44"/>

            <!-- Sposób przygotowania -->
            <Label Text="Sposób przygotowania:" FontSize="18" FontAttributes="Bold"/>

            <VerticalStackLayout x:Name="StepsList" Spacing="5">
 
                <HorizontalStackLayout x:Name="FirstStepRow" Spacing="5">
                    
                    <Button Text="-" FontSize="20" TextColor="White" BackgroundColor="Red"
                     WidthRequest="40" HeightRequest="40" Clicked="OnRemoveStepClicked"/>
                    
                    <Entry x:Name="FirstStepEntry" Placeholder="Dodaj krok ..." FontAttributes="Italic"
                     MaxLength="200" BackgroundColor="#3B3533" PlaceholderColor="White" WidthRequest="400"/>
                    
                    <Entry x:Name="FirstStepTime" Placeholder="min" Keyboard="Numeric"
                     BackgroundColor="#3B3533" PlaceholderColor="White" WidthRequest="80" FontAttributes="Italic"/>
                    
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <Button x:Name="AddStepButton" Text="+" Clicked="OnAddStepsClicked" FontSize="24" TextColor="White" BackgroundColor="#3B3533" BorderColor="White" BorderWidth="1" HeightRequest="44"/>


            <!-- Zdjęcia -->
            <Label Text="Zdjęcia:" FontSize="18" FontAttributes="Bold"/>
            <Button Text="Dodaj zdjęcie" Clicked="OnAddImageClicked" TextColor="White" BackgroundColor="#8A543D" BorderColor="White" BorderWidth="1"/>

            <CollectionView x:Name="ImagesCollectionView" ItemsSource="{Binding Images}" HeightRequest="100" BackgroundColor="#1F1C0C">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Horizontal" Span="2"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Image Source="{Binding}" HeightRequest="100" WidthRequest="100"/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Zapisz przepis" TextColor="White" HorizontalOptions="Center" Clicked="OnSaveRecipeClicked" BackgroundColor="#8A543D" BorderColor="White" BorderWidth="2"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
